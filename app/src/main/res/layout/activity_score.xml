<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:layout_margin="35dp">

    <ImageView
        android:layout_width="277dp"
        android:layout_height="133dp"
        android:src="@drawable/gameover" />

    <TextView
        android:id="@+id/tvScoreMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Votre RÃ©sultat:"
        android:textColor="@color/purple_500"
        android:textSize="22sp" />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_width="189dp"
        android:layout_height="145dp"
        android:layout_marginLeft="50dp"
        app:donut_finished_color="@color/HotPink"
        app:donut_progress="30"
        app:donut_text_color="@color/DeepPink" />




    <Button
        android:id="@+id/bPlayAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Again"
        app:backgroundTint="@color/DeepPink"
        />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

</LinearLayout>